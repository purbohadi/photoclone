=snippet :'/snippets/top'
.span-24.last
  %h2 Change your profile here
%form{:method => 'post', :action => '/save_profile' }
  .span-5 
    A nickname for your account
  .span-18.last
    %input{:type => 'text', :name => 'nickname', :value => "#{@myself.nickname}"}
  .span-5
    Your name
  .span-18.last
    %input.span-10{:type => 'text', :name => 'formatted_name', :value => "#{@myself.formatted_name}"}
  .span-5
    Where are you?
  .span-18.last
    %input.span-10{:type => 'text', :name => 'location', :value => "#{@myself.location}"}
  .span-5
    Brief description of yourself
  .span-18.last
    %textarea{:name => 'description'} #{@myself.description}

  %hr.space

  .span-2.prepend-13
    %input{:type => 'submit', :value => 'save profile'}