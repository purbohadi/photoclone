.span-24
  .span-11
    %img.span-11{:src => '/images/login_logo.gif'}
    .span-9.prepend-2
      %h2{:style => 'margin-top:0; padding-top: 0;'} Sharing photos, finding friends  
      
      .subtitle Photoclone is a no-frills photo sharing site that allows you to share your photos with your friends!
      .subtitle You don't need to register any accounts, just use an existing Google, Yahoo, Facebook or Twitter account!
  .span-2.prepend-10
    %a.rpxnow{:onclick => "return false;", :href => "https://photoclone.rpxnow.com/openid/v2/signin?token_url=#{@token}" } 
      %h3 Sign In

  -if flash[:error]
    .span-24
      .error 
        = flash[:error]
  %img{:src => "#{Photo.random}"} 
